<!--components/popup/popup.wxml-->
<view class="wx-popup" hidden="{{flag}}">
  <view class='popup-container'>
    <view class="wx-popup-title">{{title}}</view>

    <view class="wx-popup-img-container">
    <image class='wx-popup-img' mode="aspectFit" src="{{imageUrl}}"></image>
    </view>

    <view class='wx-popup-item'>
      <text class="wx-popup-con">花名：</text>
      <text class="wx-popup-val">{{name}}</text>
    </view>

    <view class='wx-popup-item'>
      <text class="wx-popup-con">花语：</text>
      <text class="wx-popup-val">{{hyyy}}</text>
    </view>

    <view class='wx-popup-item'>
      <text class="wx-popup-con">别名：</text>
      <text class="wx-popup-val">{{aliasName}}</text>
      </view>

    <view class='wx-popup-item'>
      <text class="wx-popup-con">科：</text>
      <text class="wx-popup-val">{{family}}</text>
    </view>

    <view class='wx-popup-item'>
      <text class="wx-popup-con">属：</text>
      <text class="wx-popup-val">{{genus}}</text>
    </view>

    <view class='wx-popup-item'>
      <text class="wx-popup-con">拉丁名：</text>
      <text class="wx-popup-val">{{latinName}}</text>
    </view>

  
  
    <view class="wx-popup-btn">
      <!-- <text class="btn-no" bindtap='_error'>{{btn_no}}</text> -->
      <text class="btn-ok" bindtap='_success'>{{btn_ok}}</text>
    </view>
  </view>
</view>