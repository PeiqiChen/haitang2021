/* components/popup/popup.wxss */
.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  text-align: center;
  width: 100%;
  max-width: 600rpx;
  /* border: 2rpx solid #ccc; */
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.wx-popup-title {
  margin-top: 3px;
  width: 100%;
  padding: 12rpx;
  text-align: center;
  font-size: 35rpx;
  border-bottom: 2rpx solid #64b917;
}

.wx-popup-img-container{
  align-items: center;
  justify-content: center;
}

.wx-popup-img{
  margin-top: 16rpx;
  height:300rpx;
  width: 100%;
  /* background-color: aquamarine; */
}
.wx-popup-item {
  /* margin: 60rpx 5rpx; */
  text-align: left;
  padding-left: 30rpx;
}

.wx-popup-item text{
  font-size: 32rpx;
}

.wx-popup-con{
  font-weight: 900;
}
.wx-popup-btn {
  margin-top: 6px;
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}
.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28%;
  height: 48rpx;
  border: 2rpx solid rgb(175, 175, 175);
  border-radius: 88rpx;
  font-size: 28rpx;
  color: rgb(139, 139, 139);
}